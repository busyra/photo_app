<div class="col-md-8 col-md-offset-1">

	<!-- displays post title and description -->
	<%= image_tag @post.image.url(:med) %><br>
	<h3> <%= @post.title %> </h3>
	<h4> <%= @post.description %></h4>
	<p>Submitted by: </p>
	<h5> <%= @post.user.email%></h5>
	<!--  link to edit post -->
	<%= link_to "Edit", edit_post_path %>
	<!-- link to destroy post and confirmation message-->
	<%= link_to "Delete", post_path, method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
</div>